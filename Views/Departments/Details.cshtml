@model SampleCode.Models.Department

@{
    ViewData["Title"] = "Department Details";
}

<h1>Department Details</h1>

<div>
    <h4>Department</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Logo)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Logo" alt="Logo" width="50" height="50" />
        </dd>
        <dt class="col-sm-2">
            Sub-Departments
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var subDept in Model.SubDepartments)
                {
                    <li>@subDept.Name</li>
                }
            </ul>
        </dd>
        <dt class="col-sm-2">
            Parent Departments
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var parentDept in ViewData["ParentDepartments"] as List<SampleCode.Models.Department>)
                {
                    <li>@parentDept.Name</li>
                }
            </ul>
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>